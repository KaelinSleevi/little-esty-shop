<h1>Create new item</h1>

<%=form_with model: @item, url: new_merchant_item_path, method: :post,local: true do |f| %>

<ol>Name:<%= f.text_field :name %></ol>
<ol>Description:<%= f.text_field :description %></ol>
<ol>Unit Price:<%= f.text_field :unit_price %></ol>
<ol><%= f.submit "Submit" %></ol>
<% end %>
