<h1>Bulk Discounts</h1>

<% @merchant.bulk_discounts.each do |bulk_discount|%>
    <div id="discount-<%=bulk_discount.id%>">
        <ul>
            <li>Discount: <%= "#{bulk_discount.percentage_discount}%" %> - <%= link_to "Delete Discount", merchant_bulk_discount_path(@merchant, bulk_discount), method: :delete%></li>
            <li>Quantity Threshold: <%= bulk_discount.quantity_threshold %></li>
            <%= link_to "See This Discount", merchant_bulk_discount_path(@merchant, bulk_discount)%>
        </ul>
    </div>
<% end %>

<%= link_to "Create a New Discount", new_merchant_bulk_discount_path(@merchant)%>
